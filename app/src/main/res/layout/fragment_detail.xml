<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_text_detail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#029789"
        android:gravity="center"
        android:padding="18dip"
        android:text="Titel"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.88"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view_detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="Movieimage"
            android:gravity="center"
            android:padding="20dip"
            android:textColor="#000000" />

        <ListView
            android:id="@+id/movie_details_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:cacheColorHint="@android:color/transparent"
            android:listSelector="@android:color/transparent"
            android:paddingRight="15pt" />

    </LinearLayout>


    <!--extensible for part 2 of project-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="172dp"
        android:background="@drawable/border_textview"
        android:orientation="vertical">

        <TextView
            android:id="@+id/synopsis_text_detail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffff"
            android:paddingLeft="6pt"
            android:paddingRight="6pt"
            android:paddingTop="5pt"
            android:scrollbars="vertical"
            android:text="blabdfkbs lfbsakld bfklabsd kbflkasdb fsd sf asdf ads fasd f"
            android:textColor="#737373"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>